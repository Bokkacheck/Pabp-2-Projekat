@model IEnumerable<Projekat2.ViewModels.ProductsSupplierOrder>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<form asp-action="ProductsSupplierOrderResult">
    <div class="form-group">
        <label for="SupplierId" class="control-label"></label>
        <select name="SupplierId" id="SupplierId" class="form-control" asp-items= " ViewBag.SupplierId"></select>
    </div>

    <div class="form-group">
        <label for="OrderId" class="control-label"></label>
        <select name="OrderId" id="OrderId" class="form-control" asp-items="ViewBag.OrderId"></select>
    </div>

    <div class="form-group">
        <input type="submit" value="Get results" class="btn btn-primary" />
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supplier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Count)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Order)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Supplier)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Count)
                </td>
            </tr>
        }
    </tbody>
</table>
